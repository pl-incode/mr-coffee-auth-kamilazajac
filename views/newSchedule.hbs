
<div class="row justify-content-md-center" style="margin-top: 100px">
<div class="col-md-6">

<h2>Add new schedule</h2>
    <form id="schedule-form" method="POST" action="/newSchedule">
        <label for="user_id">User ID:</label></br>
        <input type="text" name="user_id"></br>
        <label for="day">Day:</label></br>
        <input type="text" name="day"></br>
        <label for="start_at">Start at:</label></br>
        <input type="time" name="start_at"></br>
        <label for="end_at">End at:</label></br>
        <input type="time" name="end_at"></br>
        </br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form> 
    <div>

    <h2>{{Title}}</h2>  
     <div>
        {{#each schedules as |schedule|}} 
        <h3>User {{schedule.firstname}}</h3>
        <p>day: {{schedule.day}}</p>
        <p>Start at: {{schedule.start_at}}</p>
        <p>End at: {{schedule.end_at}}</p>
        {{/each}}
    </div> 

    </div>
</div>
</div>
